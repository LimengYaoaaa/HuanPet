<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f9f9f9">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/my"
            android:id="@+id/mPersonalCenter"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:hint="地区、街道、小区"
            android:textSize="20dp"
            android:background="@drawable/pe_shape_border_gray" />



        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/mMap"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/map"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor"></View>


    <LinearLayout
        android:id="@+id/linl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近优选"
                android:textSize="20dp"

                />
            <ImageView
                android:id="@+id/fujinyouxuan"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/down_arrow"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宠物类型"
                android:textSize="20dp"

                />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/chongwuleixing"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/down_arrow"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选"
                android:textSize="20dp"

                />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/shaixuan"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/down_arrow"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>




    </LinearLayout>



</LinearLayout>